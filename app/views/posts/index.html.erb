<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th class ="col-md-2 col-md-offset-4">Title</th>
      <th class = "col-md-2 col-md-offset-4">Link</th>
      <th >Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class ="col-md-2">
          <%= link_to (post) do %>
            <%= post.title%><%= image_tag (post.image.url(:medium)) %> <%= "#{post.comments.count } Comments" %><br><%= "#{post.get_dislikes.size} Dislikes " %><%= " #{post.get_likes.size} Likes" %>
          <% end %>
        </td>

        <td class ="col-md-2"><%= link_to post.link, "#{post.link}", :target => '_blank' %></td>

        <td ><%= post.description %><%= link_to 'Show', post %> 
          
          <%if current_user != nil %>
            <%= link_to 'Edit', edit_post_path(post) %> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><%end%><p style = "font-style:italic"><%= "By: #{current_user.name}"%></p>
        </td>



      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br><br>
<div class ="col-md-2">
<%= link_to 'Make Some Ruckus?', new_post_path %>
</div>
